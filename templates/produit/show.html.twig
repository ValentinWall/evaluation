{% extends 'base.html.twig' %}

{% block title %}{{ contact_company }}{% endblock %}

{% block body %}

<div class="container py-5">

    <div class="row my-5">

        <div class="col-4">
            <div class="row">
                <div class="col-12">
                    <img src="{{ asset('img/product/' ~ produit.img) }}" alt="{{ produit.alt }}" class="w-100">
                </div>
            </div>
        </div>

        <div class="col-5 offset-1">
            <h1 class="text-center">{{ produit.title|upper }}</h1>
            <hr class="text-secondary my-4">
            <p class="fs-3">
                {{ produit.price|number_format(2, ',', ' ') }} €
            </p>
            <p class="fs-3"> {{ produit.description }}</p>
            <p class="fs-3"> {{ produit.city }} </p>
        </div>

        <div class="row">
            <div class="col-4">
                <a href="" class="btn btn-success"> Réserver </a>
            </div>
        </div>
            

{% endblock %}